{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "declaration": true,
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "types": ["node"],
    "skipLibCheck": true
  },
  "include": ["src/**/*", "src/**/*.d.ts", "src/**/*.test.ts", "src/**/__tests__/**/*"],
  "exclude": ["node_modules"]
} 